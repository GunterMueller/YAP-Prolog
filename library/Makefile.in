#
# default base directory for YAP installation
#
ROOTDIR = @prefix@
#
# where the binary should be
#
BINDIR = $(ROOTDIR)/bin
#
# where YAP should look for libraries
#
LIBDIR=$(ROOTDIR)/lib/Yap
#
#
# You shouldn't need to change what follows.
#
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@

PROGRAMS= $(srcdir)/assoc.yap \
	$(srcdir)/atts.yap \
	$(srcdir)/avl.yap \
	$(srcdir)/charsio.yap \
	$(srcdir)/heaps.yap \
	$(srcdir)/lists.yap \
	$(srcdir)/logtalk.yap \
	$(srcdir)/ordsets.yap \
	$(srcdir)/prandom.yap \
	$(srcdir)/queues.yap \
	$(srcdir)/random.yap \
	$(srcdir)/regexp.yap \
	$(srcdir)/system.yap \
	$(srcdir)/terms.yap \
	$(srcdir)/timeout.yap \
	$(srcdir)/trees.yap \
	$(srcdir)/ugraphs.yap

LOGTALK_PROGRAMS= \
	$(srcdir)/logtalk/logtalk.pl \
	$(srcdir)/logtalk/yap430.config

install: $(PROGRAMS)
	-mkdir $(DESTDIR)$(LIBDIR)/library
	-mkdir $(DESTDIR)$(LIBDIR)/library/logtalk
	$(INSTALL_DATA) $(PROGRAMS) $(DESTDIR)$(LIBDIR)/library
	$(INSTALL_DATA) $(LOGTALK_PROGRAMS) $(DESTDIR)$(LIBDIR)/library/logtalk


