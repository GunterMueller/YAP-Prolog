OBJS = \
	BayesBall.o \
	BayesBallGraph.o \
	BeliefProp.o \
	ConstraintTree.o \
	CountingBp.o \
	ElimGraph.o \
	Factor.o \
	FactorGraph.o \
	GenericFactor.o \
	GroundSolver.o \
	Histogram.o \
	HorusYap.o \
	Indexer.o \
	LiftedBp.o \
	LiftedKc.o \
	LiftedOperations.o \
	LiftedUtils.o \
	LiftedVe.o \
	LiftedWCNF.o \
	ProbFormula.o \
